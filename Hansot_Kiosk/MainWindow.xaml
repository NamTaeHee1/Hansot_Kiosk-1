<Window x:Class="Hansot_Kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hansot_Kiosk"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="9.5*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Name="header" Height="25" Content="header" Background="LightSkyBlue" />
            <Separator Height="5"/>
            <Grid>
                <!-- content -->
            </Grid>
        </StackPanel>
        <local:UserControlHome x:Name="ucHome" Grid.Row="1" Visibility="Visible">
            
        </local:UserControlHome>
        <local:UserControlHeader x:Name="ucHeader" Visibility="Collapsed">
            
        </local:UserControlHeader>
    </Grid>
</Window>
